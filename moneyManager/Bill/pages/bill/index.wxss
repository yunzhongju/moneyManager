/* pages/bill/index.wxss */

.header {
  background: #33baff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 30rpx;
}

.header .up {
  align-self: flex-end;
  display: flex;
  width: 60%;
  justify-content: space-between;
}

.header .up .year {
  align-self: flex-end;
  padding-top: 30rpx;
  padding-right: 20rpx;
}

.header .up .txt-sty {
  margin-left: 20rpx;
}

.txt-sty {
  color: #fff;
  font-size: 30rpx;
}

.money {
  font-size: 60rpx;
  font-weight: 400;
  margin: 10rpx 0;
}

.down {
  display: flex;
  width: 70%;
  justify-content: space-between;
  text-align: center;
}

.down .left {
  flex-basis: 50%;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.down .hr {
  border-right: 3rpx solid gray;
}

.down .left text {
  padding-left: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
}

.list .head {
  display: flex;
  justify-content: space-around;
  color: #a9a9a9;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #a9a9a9;
}

.list .item {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #a9a9a9;
}

.list .item text {
  flex-basis: 25%;
  text-align: center;
}

.month {
  color: #a9a9a9;
}
