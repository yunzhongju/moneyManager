/* pages/detail/index.wxss */

.header {
  height: 250rpx;
  background: #33baff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header text {
  padding: 10rpx 0;
}

.info {
  display: flex;
  flex-direction: column;
}

.info .item {
  display: flex;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #969696;
  height: 100rpx;
  align-items: center;
  color: #1e322f;
}

.info .item .label {
  color: #969696;
  margin-right: 40rpx;
}

.footer {
  height: 100rpx;
  width: 100%;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  border-top: 1rpx solid #969696;
  align-items: center;
}

.footer text {
  flex-basis: 50%;
}

.footer .hr {
  border-left: 1rpx solid #969696;
}

.dialog {
  position: absolute;
  bottom: 100px;
  left: 0px;
  width: 100%;
  display: flex;
  flex-direction: column;
  border: 2rpx solid #969696;
  box-shadow: 2px 2px 3px #aaa;
  background: #33baff;
}

.dialog .btn {
  display: flex;
  margin-top: 10px;
  align-items: center;
}

.dialog .btn text {
  flex-basis: 50%;
  text-align: center;
  border-right: 1rpx solid #969696;
  padding-bottom: 10rpx;
}

.dialog .btn text:hover {
  color: #fff;
}
